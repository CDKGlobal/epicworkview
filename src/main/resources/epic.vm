<html>
  <head>
    <title>My Epic</title>
    <meta name="decorator" content="atl.general">
    $webResourceManager.requireResource("com.cobalt.jira.plugin.epic.EpicPlugin:EpicPlugin-resources")
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.js"></script>
  </head>
  <body>
    <div ng-app ng-controller="ProjectController" ng-click="hideEpicInfo()" ng-class ="{'fullscreen': isFullScreen}" class="content-container content-body">
    	<button ng-click="toggleFullScreen()" class="fullscreen-button">
    		Full
    	</button>
	    <table id="projects" class="aui">
	      <thead>
	        <tr>
	          <th>
	          	<span class="fieldLabel">Projects</span>
	          	<span ng-click="toggleFilter($event)" class="criteria-selector aui-button aui-button-subtle drop-arrow">
	          		filter
	          	</span>
	          	<div ng-show="filter" ng-click="$event.stopPropagation()" class="project-filter pop-up">
			    	<form action="#" class="searchfilter aui top-label aui-popup-content project-criteria">
			    		<input type='text' ng-model='searchText.name' autocomplete="off" placeholder="Find Projects..." class="aui-field" wrap="off">
			    		<div class="aui-list-scroll">
			    			<ul class="aui-list-section">
			    				<li ng-repeat="project in alphabeticalProjects() | filter:searchText" class="check-list-item">
			    					<label class="item-label" title="{{project.name}}">
			    						<input type="checkbox" ng-init="project.included=true" ng-model='project.included'>
			    						{{project.name}}
			    					</label>
			    				</li>
			    			</ul>
			    		</div>
			    	</form>
			    </div>
	          </th>
	          <th>Project Id</th>
	          <th>Project Key</th>
	          <th>Project Description</th>
	          <th>Last Update</th>
	          <th>Epics</th>
	        </tr>
	      </thead>
	      <tbody>
	      	<tr ng-repeat="project in timeOrderedProjects() | filter: {included:true}">
	      		<td><a href="/jira/browse/{{project.key}}">{{project.name}}</a></td>
	      		<td>{{project.id}}</td>
	      		<td>{{project.key}}</td>
	      		<td>{{project.description}}</td>
	      		<td>{{millisecondToString(project.timestamp)}}</td>
	      		<td>
	      			<ul class="epics" ng-controller="EpicController">
	      				<li class="inline" ng-repeat="epic in project.epics" ng-init="setUniqueId(epic)">
	      					<a href="#" ng-class="{'clicked-epic': isClicked(epic.id)}" class="epic" ng-click="toggleEpic($event, epic.id)">
	      						{{epic.name}}
	      					</a>
	      					<div class="epic-info pop-up aui-list-scroll" ng-show="isClicked(epic.id)" ng-click="$event.stopPropagation()">
	      						<p>{{epic.description}}</p>
	      						<p>Stories:</p>
	      						<ul class="aui-list-section">
	      							<li class="story" ng-repeat="story in epic.stories">
	      								<a href="/jira/browse/{{story.key}}">{{story.name}}</a>
	      							</li>
	      						</ul>
	      					</div>
	      				</li>
	      			</ul>
	      		</td>
	      	</tr>
	      </tbody>
    	</table>
    </div>
  </body>
</html>
